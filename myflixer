pages.map do |page|
  page
    .search('//img[contains(@class,"film-poster-img")]')
    .map do |e| 
      ea=e.attributes 
      puts [
            ea['data-src'], 
            ea['alt'], 
            e.parent
              .search('a')
              .map{|a| [URL_ROOT, a.attributes["href"].value].join }
              .pop
           ]
           .map(&:to_s) 
           .join("\t") 
    end
end
