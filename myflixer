#!/usr/bin/env ruby
# Id$ nonnax 2022-02-17 13:07:07 +0800
require 'mechanize'
require 'pp'

URL_ROOT='https://myflixer.to'
i, stop, t=ARGV
t ||= 'tv'
type = %w[tv-show movie].grep(/#{t}/).first
t = type.sub('-show', '')
start=i.to_i
stop=stop || start
stop &&= stop.to_i

th=[]
pages=[]

(start..stop).each do |i|
 th << Thread.new(i, type) do |i|
    url="https://myflixer.to/#{type}?page=#{i}"
    agent=Mechanize.new
    page=agent.get(url)
    pages<<page
  end
end

th.map(&:join)
